# ==============================================
# Precision Medicine Engine - Environment Config
# ==============================================
# Copy this file to .env and fill in your values

# --- Neo4j Configuration ---
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=your_neo4j_password_here

# --- Ollama Configuration (Local LLMs) ---
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_PHI_MODEL=llama3.1:8b
OLLAMA_CYPHER_MODEL=deepseek-coder-v2:latest

# --- OpenClaw API Configuration ---
OPENCLAW_API_URL=http://localhost:8080/api/v1/research
OPENCLAW_API_KEY=your_openclaw_api_key_here

# --- n8n Configuration ---
N8N_HOST=localhost
N8N_PORT=5678
N8N_PROTOCOL=http
N8N_ENCRYPTION_KEY=your_encryption_key_here
WEBHOOK_URL=http://localhost:5678

# --- Security Settings ---
# All PHI processing is done locally via Ollama
PHI_PROCESSING_MODE=LOCAL_ONLY
ENABLE_AUDIT_LOGGING=true
DATA_RETENTION_DAYS=30
